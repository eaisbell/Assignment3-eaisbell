@model IEnumerable<Assignment3_V2.Models.Actors>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h1 style="font-size: 60px; color: black;">All Actors</h1>

</div>
<style>
    body{
        background-image: url('https://static.vecteezy.com/system/resources/previews/000/631/634/original/green-grid-mosaic-background-creative-design-templates-vector.jpg');
    }
</style>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Age
            </th>
            <th>
                IMBD Link
            </th>
            <th>
                Photo
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Movie)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IMBDLink)
                </td>
                <td>
                    @if (item.ActorPhoto != null)
                    {
                        <img width="100" height="100" src="@Url.Action("GetActorPhoto", "Actors", new {item.Id})" />
                    }
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
